{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Umi Library",
	"extends": "./base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"outDir": "dist",
		"target": "ESNext"
	},
	"include": [
		"mock/**/*",
		"src/**/*",
		"tests/**/*",
		"test/**/*",
		"__test__/**/*",
		"typings/**/*",
		"config/**/*",
		".eslintrc.js",
		".stylelintrc.js",
		".prettierrc.js",
		"mock/*"
	],
	"exclude": ["node_modules", "build", "dist", "scripts", "src/.umi/*", "webpack", "jest"]
}
